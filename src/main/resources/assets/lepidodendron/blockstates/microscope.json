{
  "multipart": [
    {   "when": { "facing": "north" },
      "apply": [
        {"model": "lepidodendron:microscope" }
      ]
    },
    {   "when": { "facing": "south" },
      "apply": [
        {"model": "lepidodendron:microscope", "y": 180  }
      ]
    },
    {   "when": { "facing": "east" },
      "apply": [
        {"model": "lepidodendron:microscope", "y": 90 }
      ]
    },
    {   "when": { "facing": "west" },
      "apply": [
        {"model": "lepidodendron:microscope", "y": 270}
      ]
    }
  ]
}